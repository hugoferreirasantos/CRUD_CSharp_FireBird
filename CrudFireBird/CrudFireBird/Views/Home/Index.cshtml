@model IEnumerable<HomeModel>
@{
    ViewData["Title"] = "Home Page";
}

<div>

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Listagem</h1>
        <a class="btn btn-success mx-2" asp-controller="Home" asp-action="Cadastrar">Cadastrar</a>
    </div>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">CODIGO</th>
            <th scope="col">NOME</th>
            <th scope="col">IDADE</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach (var cadastro in Model)
            {
                <tr>
                    <th scope="row">@cadastro.CODIGO</th>
                    <td>@cadastro.NOME</td>
                    <td>@cadastro.IDADE</td>
                    <td>
                        <a asp-controller="Home" asp-action="Editar" asp-route-id="@cadastro.CODIGO" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Home" asp-action="Excluir" asp-route-id="@cadastro.CODIGO" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        }
        

    </tbody>
</table>
</div>
